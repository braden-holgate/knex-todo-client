#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]
const cmdTarget = userInputs[3]

console.log(userInputs)

switch (cmd) {
  case 'list':
    commands.list()
    break
  case 'done':
    commands.deleteTodo(cmdTarget)
    break
  case 'add':
    commands.insertTodo(cmdTarget)
    break

  default:
    console.log(`I don't understand that command: ${cmd}`)
}
