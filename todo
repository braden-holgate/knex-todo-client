#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]
const position = userInputs[3]
const position2 = userInputs[4]

switch (cmd) {
  case 'list':
    commands.list()
    break

  case 'delete':
    commands.deleteTodos(position)
    break

  case 'add':
    commands.addTask(position)
    break

  case 'update':
    commands.updateTodos(position, position2)
    break

  default:
    console.log(`I don't understand that command: ${cmd}`)
}
