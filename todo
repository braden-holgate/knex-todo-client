#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]
const opt = userInputs[3]
const opt2 = userInputs[4]
// console.log(userInputs)

switch (cmd) {
  case 'list':
    commands.list()
    break
  case 'done':
    commands.deleteToDo(opt) //(id)
    break
  case 'add':
    commands.addToDo(opt) //(task)
    break
  case 'edit':
    commands.editToDo(opt, opt2) //(id, task)
    break  
  case 'search':
    commands.searchToDo(opt) //('string')
    break      
  default:
    console.log(`I don't understand that command: ${cmd}`)
}
