#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]

switch (cmd) {
  case 'list':
    commands.list()
    break
  case 'done':
    const taskId = userInputs[3]
    commands.deleteTask(taskId)
    break
  case 'add':
    const tasktitle = userInputs[3]
    commands.addNewRecord(tasktitle)
    break
  case 'update':
    commands.updateTask(userInputs[3], userInputs[4])
    break
  default:
    console.log(`I don't understand that command: ${cmd}`)
}
