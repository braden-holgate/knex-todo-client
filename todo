#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]
const nextCmd = userInputs[3]
const lastCmd = userInputs[4]

switch (cmd) {
  case 'list':
    commands.list()
    break
  case 'delete':
    commands.deleteTodo(nextCmd)
    break
  case 'add':
    commands.newTask(nextCmd)
    break
  case 'update':
    commands.updateTask(nextCmd, lastCmd)
    break
  default:
    console.log(`I don't understand that command: ${cmd}`)
}
