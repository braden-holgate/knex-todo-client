#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]

switch (cmd) {
  case 'list':
    commands.list()
    break

  case 'delete': {
    const id = userInputs[3]
    commands.deleteTask(id)
    break
  }

  case 'add': {
    const newTask = userInputs[3]
    commands.addTask(newTask)
    break
  }

  case 'update': {
    const id = userInputs[3]
    const updateTask = userInputs[4]
    commands.updateTask(id, updateTask)
    break
  }

  case 'search': {
    const keyword = userInputs[3]
    commands.searchTask(keyword)
    break
  }
  case 'done': {
    const id = userInputs[3]
    commands.completeTask(id)
    break
  }

  default:
    console.log(`I don't understand that command: ${cmd}`)
}
