#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]

switch (cmd) {
  case 'list':
    commands.list()
    break
  case 'done':
    const taskId = userInputs[3]
    commands.deleteTask('id', taskId)
    break
  case 'add':
    const tasktitle = userInputs[3]
    commands.addNewRecord(tasktitle)
    break
    case 'update':
      const updatedRecord = userInputs[4]
      const id = userInputs[3]
      commands.updateTask('id', id, updatedRecord)
    break
  default:
    console.log(`I don't understand that command: ${cmd}`)
}
