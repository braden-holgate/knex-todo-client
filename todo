#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]
const target = userInputs[3]
const target2 = userInputs[4]

console.log(userInputs)

switch (cmd) {
  case 'list':
    commands.list()
    break
  case 'done':
    commands.deleteTodo(target)
    break
  case 'add':
    commands.insertTodo(target)
    break
  case 'update':
    commands.updateTodo(target, target2)
    break
  case 'search':
    commands.searchTodo(target)
    break
  default:
    console.log(`I don't understand that command: ${cmd}`)
}
