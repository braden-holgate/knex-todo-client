#!/usr/bin/env node

const commands = require('./commands')

const userInputs = process.argv
const cmd = userInputs[2]
const arg = userInputs[3]
const update = userInputs[4]
console.log(arg)

switch (cmd) {
  case 'list':
    commands.list()
    break
  case 'done':
    commands.deleteTask(arg)
    break
  case 'add':
    commands.newTask(arg)
    break
  case 'update':
    commands.updateTask(arg, update)
    break

  case 'search':
    commands.searchTask(arg)
    break

  default:
    console.log(`I don't understand that command: ${cmd}`)
}
